/* detail.wxss */

.detail-main-view {
  padding: 10rpx 15rpx;
  line-height: 60rpx;
}

.c-dou-merchant {
  display: flex;
}

.c-dou {
  font-weight: bold;
  flex: 1;
}

.c-merchant {
  color: #ccc;
  flex: 1;
  text-align: right;
}

.c-price {
  font-weight: bold;
  color: red;
}


.c-attr {
    float:left;
    display: inline-block;
}

.c-attr.attr-0 {
  width: 360rpx;
}

.c-attr.attr-1 {
  text-align: right;
}

.c-form{
    display:flex;line-height:100rpx;
}
.c-form-label{
    flex:1;
}
.c-form-input{
    flex:auto;
}




.radio-group{
    line-height:44px;
}

.c-remark{
    line-height:80rpx;padding-left:15rpx;
}






.c-buy{
    position:fixed;
    bottom:0;
    line-height:80rpx;
    height:80rpx;
    padding:0 15rpx 0 15rpx;
    width:720rpx;
    border-top:1rpx solid #cccccc;
    display: flex;
}
.c-buy view{
flex:1;
}
.c-buy-right{
    text-align: right;
    line-height:60rpx;
    padding:10rpx 0;
}
.c-buy-right button{
    width:200rpx;
    height:60rpx;
}

.c-border-hr{
    width:100%;height:1px;background-color:#000000;
    margin:30rpx 0 ;
}
.clear{
    clear:both;
}